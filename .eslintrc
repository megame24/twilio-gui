{
  "root": true,
  "extends": [
    "eslint:recommended",
    "eslint-config-airbnb-es5"
  ],
  "plugins": [
    "es5"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true,
    "mocha": true,
    "browser": true
  },
  "rules": {
    "max-len":[2, 80, 2],
    "indent": [2, 2],
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "func-names": 0
  }
}